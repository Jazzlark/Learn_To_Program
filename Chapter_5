#5.5

puts 'Hello there, and what\'s your name?'
name2 = gets.chomp
puts 'Your name is ' + name2 + '? What a lovely name!'
puts 'Pleased to meet you, ' + name2 + '. :)'

#5.6

puts "What\'s your first name?"
first = gets.chomp
puts "What\'s your middle name?"
middle = gets.chomp
puts "What\'s your last name?"
last = gets.chomp
puts "Hello, Nice to meet you #{first} #{middle} #{last}"

puts "What is your favorite number?"
number = gets.chomp
number = number.to_i + 1
puts "My favorite number is bigger and better.  It is #{number}."

end






